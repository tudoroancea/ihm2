    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            // "args": "${command:pickArgs}",
            "env": {
                "ACADOS_SOURCE_DIR": "${env:HOME}/miniforge3/envs/ihm2/src/acados",
                "DYLD_LIBRARY_PATH": "${env:HOME}/miniforge3/envs/ihm2/src/acados/lib",
            }
        }
    ]
}